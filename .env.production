# LoL Match Exporter - Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# =================================
# DATABASE CONFIGURATION
# =================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
DB_HOST=postgres
DB_PORT=5432
DB_USER=lol_user
DB_NAME=lol_match_db
DB_SSL_MODE=prefer

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =================================
# APPLICATION CONFIGURATION
# =================================
APP_ENV=production
GIN_MODE=release
LOG_LEVEL=info
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters

# =================================
# RIOT GAMES API
# =================================
RIOT_API_KEY=your_riot_api_key_here
RIOT_API_RATE_LIMIT_PERSONAL=100:120
RIOT_API_RATE_LIMIT_DEVELOPMENT=100:120

# =================================
# SECURITY CONFIGURATION
# =================================
ALLOWED_ORIGINS=http://localhost,https://yourdomain.com
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =================================
# SSL/TLS CONFIGURATION (Optional)
# =================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =================================
# MONITORING & LOGGING
# =================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log

# =================================
# PERFORMANCE SETTINGS
# =================================
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_REQUESTS=100
DATABASE_MAX_CONNECTIONS=20
DATABASE_MAX_IDLE_CONNECTIONS=5

# =================================
# FEATURE FLAGS
# =================================
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_UPDATES=false
FEATURE_EXPORT_FORMATS=true

# =================================
# BACKUP CONFIGURATION
# =================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =================================
# NOTIFICATION SETTINGS
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# =================================
# DEVELOPMENT OVERRIDES
# =================================
# Uncomment for development environment
# APP_ENV=development
# GIN_MODE=debug
# LOG_LEVEL=debug
# FEATURE_PERFORMANCE_MONITORING=true

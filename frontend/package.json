{
  "name": "herald-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:gaming": "vitest run --config vitest.gaming.config.ts",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:gaming": "cypress run --spec 'cypress/e2e/gaming/**/*.cy.ts'",
    "test:visual": "playwright test --config=tests/visual/playwright.config.ts",
    "test:visual:ui": "playwright test --config=tests/visual/playwright.config.ts --ui",
    "test:visual:debug": "playwright test --config=tests/visual/playwright.config.ts --debug",
    "test:visual:headed": "playwright test --config=tests/visual/playwright.config.ts --headed",
    "test:visual:report": "playwright show-report test-results",
    "test:visual:update": "playwright test --config=tests/visual/playwright.config.ts --update-snapshots",
    "test:all": "npm run test:run && npm run test:e2e && npm run test:visual",
    "test:gaming:all": "npm run test:gaming && npm run test:e2e:gaming && npm run test:visual",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.15",
    "@mui/material": "^5.15.15",
    "@mui/x-charts": "^7.3.1",
    "@mui/x-data-grid": "^7.3.1",
    "@mui/x-date-pickers": "^7.3.1",
    "@tanstack/react-query": "^5.32.0",
    "@tanstack/react-query-devtools": "^5.32.0",
    "axios": "^1.6.8",
    "date-fns": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "recharts": "^2.12.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.17",
    "@percy/cli": "^1.27.0",
    "@percy/playwright": "^1.0.4",
    "@playwright/test": "^1.40.0",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-onboarding": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.5.0",
    "@vitest/ui": "^1.5.0",
    "cypress": "^15.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^9.1.3",
    "jest-axe": "^10.0.0",
    "jsdom": "^24.0.0",
    "msw": "^2.2.14",
    "storybook": "^9.1.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-pwa": "^0.20.0",
    "vitest": "^1.5.0",
    "workbox-window": "^7.1.0"
  }
}

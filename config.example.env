# Configuration Herald.lol
# Copiez ce fichier vers config.production.env et configurez vos valeurs

# Riot API
RIOT_API_KEY=YOUR_RIOT_API_KEY_HERE

# JWT
JWT_SECRET=your-very-secret-jwt-key-here

# Google OAuth (optionnel)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=https://herald.lol/auth/google/callback

# Base de donn√©es
DB_CONNECTION=sqlite:///app/data/lol_matches_production.db

# CORS
CORS_ORIGINS=https://herald.lol,http://herald.lol

# Configuration serveur
HOST=localhost
PORT=8000
FRONTEND_PORT=5173

# Autres
LOG_LEVEL=info
GIN_MODE=release

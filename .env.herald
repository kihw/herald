# Production Environment Variables for herald.lol
# Copy to .env on production server

# Server Configuration
GIN_MODE=release
LOG_LEVEL=info
PORT=8002

# CORS Configuration
CORS_ORIGINS=https://herald.lol,http://herald.lol

# Security
JWT_SECRET=herald-lol-production-secret-change-this-in-production-2024

# Database
DB_CONNECTION=sqlite:///app/data/lol_matches_production.db

# API Timeouts
WEBHOOK_TIMEOUT=30s
REQUEST_TIMEOUT=30s
MAX_REQUEST_SIZE=10MB

# Riot API Configuration (set these on production server)
# RIOT_API_KEY=RGAPI-your-production-key-here
# RIOT_REGION=euw1

# SSL Configuration (when available)
# SSL_CERT_PATH=/etc/nginx/ssl/herald.lol.crt
# SSL_KEY_PATH=/etc/nginx/ssl/herald.lol.key

# Monitoring
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
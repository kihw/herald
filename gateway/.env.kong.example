# Herald.lol Gaming Analytics - Kong API Gateway Environment Configuration
# Copy to .env.kong and update values for your environment

# Environment Configuration
ENVIRONMENT=development
NODE_ENV=development

# Herald.lol Gaming Domain Configuration
HERALD_DOMAIN=api.herald.lol
HERALD_STAGING_DOMAIN=staging-api.herald.lol
HERALD_PRODUCTION_DOMAIN=api.herald.lol

# Kong Database Configuration
KONG_PG_PASSWORD=kong_gaming_password_change_me
KONG_PG_DATABASE=kong
KONG_PG_USER=kong
KONG_PG_HOST=kong-database
KONG_PG_PORT=5432

# Kong Gaming Configuration
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_PROXY_LISTEN=0.0.0.0:8000, 0.0.0.0:8443 ssl
KONG_PLUGINS=bundled,prometheus,rate-limiting-advanced,request-transformer-advanced,response-transformer-advanced,proxy-cache-advanced,cors,correlation-id,datadog

# Gaming Performance Configuration
KONG_NGINX_WORKER_PROCESSES=auto
KONG_NGINX_WORKER_CONNECTIONS=8192
KONG_MEM_CACHE_SIZE=256m

# Gaming Redis Configuration (for Kong plugins)
REDIS_PASSWORD=herald_gaming_redis_change_me
REDIS_HOST=herald-redis
REDIS_PORT=6379
REDIS_DATABASE=0

# Kong Manager Configuration
KONG_MANAGER_SECRET=herald_gaming_manager_secret_change_me

# Gaming Security Configuration
KONG_ANONYMOUS_REPORTS=off
KONG_LOG_LEVEL=info

# Gaming SSL Configuration
KONG_SSL_CERT_PATH=/usr/local/kong/ssl/herald.crt
KONG_SSL_KEY_PATH=/usr/local/kong/ssl/herald.key

# Gaming Monitoring Configuration
DD_API_KEY=your_datadog_api_key_here
DD_SITE=datadoghq.com
DD_HOSTNAME=herald-gaming-gateway
DD_TAGS=env:development,service:herald-lol,component:gaming-api-gateway

# Gaming Rate Limiting Configuration
GAMING_API_RATE_LIMIT_PER_MINUTE=1000
GAMING_ANALYTICS_RATE_LIMIT_PER_MINUTE=500
RIOT_API_RATE_LIMIT_PER_2MIN=95
RIOT_API_RATE_LIMIT_PER_10MIN=550

# Gaming Backend Configuration
HERALD_BACKEND_HOST=herald-backend
HERALD_BACKEND_PORT=8080
HERALD_BACKEND_PROTOCOL=http

# Gaming Frontend Configuration
HERALD_FRONTEND_HOST=herald-frontend
HERALD_FRONTEND_PORT=3000
HERALD_FRONTEND_PROTOCOL=http

# Gaming Database Configuration (main application)
DATABASE_URL=postgres://herald:herald_password@herald-postgres:5432/herald_production?sslmode=require

# Gaming Cache Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@herald-redis:6379

# Gaming API Keys (DO NOT COMMIT REAL KEYS)
RIOT_API_KEY=RGAPI-your-riot-api-key-here
HERALD_API_SECRET=herald-gaming-api-secret-change-me

# Gaming JWT Configuration
JWT_SECRET=herald-gaming-jwt-secret-change-me-to-256-bit-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Gaming OAuth Configuration
OAUTH_CLIENT_ID=herald-gaming-oauth-client
OAUTH_CLIENT_SECRET=herald-gaming-oauth-secret-change-me
OAUTH_REDIRECT_URI=https://herald.lol/auth/callback

# Gaming CORS Configuration
CORS_ALLOWED_ORIGINS=https://herald.lol,https://www.herald.lol,https://staging.herald.lol,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Accept-Version,Authorization,Content-Length,Content-MD5,Content-Type,Date,X-Auth-Token,X-Gaming-Client,X-Herald-Version

# Gaming Performance Limits
MAX_REQUEST_SIZE=50mb
REQUEST_TIMEOUT=30s
GAMING_ANALYTICS_TIMEOUT=5s
RIOT_API_TIMEOUT=10s

# Gaming Feature Flags
ENABLE_GAMING_ANALYTICS=true
ENABLE_RIOT_API_INTEGRATION=true
ENABLE_TEAM_COMPOSITION_OPTIMIZER=true
ENABLE_COUNTER_PICK_ANALYZER=true
ENABLE_SKILL_PROGRESSION_TRACKER=true
ENABLE_COACHING_INSIGHTS=true

# Gaming Development Configuration
ENABLE_GAMING_DEBUG=false
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Gaming Docker Configuration
COMPOSE_PROJECT_NAME=herald-gaming
COMPOSE_FILE=docker-compose.yml:docker-compose.kong.yml

# Gaming Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s

# Gaming Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# Gaming Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/here
EMAIL_NOTIFICATIONS_ENABLED=false
EMAIL_FROM=noreply@herald.lol
EMAIL_TO=admin@herald.lol

# Gaming Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_AGGREGATION_INTERVAL=1h
ANALYTICS_EXPORT_ENABLED=true

# Gaming Security Scan Configuration
SECURITY_SCAN_ENABLED=true
VULNERABILITY_SCAN_SCHEDULE="0 6 * * 1"  # Weekly on Monday at 6 AM

# Gaming Load Testing Configuration
LOAD_TEST_MAX_USERS=10000
LOAD_TEST_RAMP_UP_TIME=300s
LOAD_TEST_DURATION=600s